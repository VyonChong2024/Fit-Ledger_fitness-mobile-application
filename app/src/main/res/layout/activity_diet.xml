<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/des_cyan"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toTopOf="parent"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app2:layout_constraintBottom_toBottomOf="parent"
        app2:layout_constraintTop_toTopOf="parent"
        app2:layout_constraintVertical_bias="1"
        app2:menu="@menu/nav_bar_menu"
        android:background="@color/grayish_lime_green"
        app2:itemTextColor="@color/white"
        app2:itemIconTint="@color/white"
        tools:layout_editor_absoluteX="-16dp" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="415dp"
        android:layout_height="636dp"
        app2:layout_constraintBottom_toBottomOf="parent"
        app2:layout_constraintLeft_toLeftOf="parent"
        app2:layout_constraintTop_toTopOf="parent"
        app2:layout_constraintVertical_bias="0.41">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="70dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Calorie"
                    android:textColor="@color/teal_700"
                    android:textSize="20sp" />

                <com.example.fyp_fitledger.CircularPercentageRingView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/pctRingCalories"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:percentage="75"
                    app:ringBackgroundColor="@android:color/darker_gray"
                    app:ringColor="@color/grayish_lime_green"
                    app:ringWidth="15dp"
                    app:startAngle="-90" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Macronutrient"
                    android:textColor="@color/teal_700"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/diet_piechart_background"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:orientation="vertical">

                        <com.example.fyp_fitledger.CircularPercentageRingView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/pctRingCarbs"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:percentage="75"
                            app:ringBackgroundColor="@android:color/darker_gray"
                            app:ringColor="@color/grayish_lime_green"
                            app:ringWidth="12dp"
                            app:startAngle="-90"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Carbohydrates"
                            android:textAlignment="center"
                            android:textColor="@color/teal_700"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:orientation="vertical">

                        <com.example.fyp_fitledger.CircularPercentageRingView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/pctRingFat"
                            android:layout_width="80dp"
                            android:layout_height="800dp"
                            app:percentage="75"
                            app:ringBackgroundColor="@android:color/darker_gray"
                            app:ringColor="@color/grayish_lime_green"
                            app:ringWidth="12dp"
                            app:startAngle="-90" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Fat"
                            android:textAlignment="center"
                            android:textColor="@color/teal_700"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.example.fyp_fitledger.CircularPercentageRingView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/pctRingProtein"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:percentage="75"
                            app:ringBackgroundColor="@android:color/darker_gray"
                            app:ringColor="@color/grayish_lime_green"
                            app:ringWidth="12dp"
                            app:startAngle="-90" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Protein"
                            android:textAlignment="center"
                            android:textColor="@color/teal_700"
                            android:textSize="13sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Minerals"
                    android:textColor="@color/teal_700"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="50dp"
                    android:background="@drawable/diet_piechart_background"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="15dp">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:fadingEdgeLength="20dp"
                        android:requiresFadingEdge="horizontal"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:orientation="vertical">

                                <com.example.fyp_fitledger.CircularPercentageRingView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/pctRingIron"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:percentage="75"
                                    app:ringBackgroundColor="@android:color/darker_gray"
                                    app:ringColor="@color/grayish_lime_green"
                                    app:ringWidth="8dp"
                                    app:startAngle="-90" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Iron"
                                    android:textAlignment="center"
                                    android:textColor="@color/teal_700"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:orientation="vertical">

                                <com.example.fyp_fitledger.CircularPercentageRingView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/pctRingCalcium"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:percentage="75"
                                    app:ringBackgroundColor="@android:color/darker_gray"
                                    app:ringColor="@color/grayish_lime_green"
                                    app:ringWidth="8dp"
                                    app:startAngle="-90" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Calcium"
                                    android:textAlignment="center"
                                    android:textColor="@color/teal_700"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:orientation="vertical">

                                <com.example.fyp_fitledger.CircularPercentageRingView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/pctRingPotassium"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:percentage="75"
                                    app:ringBackgroundColor="@android:color/darker_gray"
                                    app:ringColor="@color/grayish_lime_green"
                                    app:ringWidth="8dp"
                                    app:startAngle="-90" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Potassium"
                                    android:textAlignment="center"
                                    android:textColor="@color/teal_700"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:orientation="vertical">

                                <com.example.fyp_fitledger.CircularPercentageRingView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/pctRingMagnesium"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:percentage="75"
                                    app:ringBackgroundColor="@android:color/darker_gray"
                                    app:ringColor="@color/grayish_lime_green"
                                    app:ringWidth="8dp"
                                    app:startAngle="-90" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Magnesium"
                                    android:textAlignment="center"
                                    android:textColor="@color/teal_700"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:orientation="vertical">

                                <com.example.fyp_fitledger.CircularPercentageRingView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/pctRingZinc"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:percentage="75"
                                    app:ringBackgroundColor="@android:color/darker_gray"
                                    app:ringColor="@color/grayish_lime_green"
                                    app:ringWidth="8dp"
                                    app:startAngle="-90" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Zinc"
                                    android:textAlignment="center"
                                    android:textColor="@color/teal_700"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.example.fyp_fitledger.CircularPercentageRingView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/pctRingSodium"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:percentage="75"
                                    app:ringBackgroundColor="@android:color/darker_gray"
                                    app:ringColor="@color/grayish_lime_green"
                                    app:ringWidth="8dp"
                                    app:startAngle="-90" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Sodium"
                                    android:textAlignment="center"
                                    android:textColor="@color/teal_700"
                                    android:textSize="11sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Vitamin"
                    android:textColor="@color/teal_700"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="55dp"
                    android:background="@drawable/diet_piechart_background"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="15dp">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:fadingEdgeLength="20dp"
                        android:requiresFadingEdge="horizontal"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:orientation="vertical">

                                <com.example.fyp_fitledger.CircularPercentageRingView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/pctRingVitaminD"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:percentage="75"
                                    app:ringBackgroundColor="@android:color/darker_gray"
                                    app:ringColor="@color/grayish_lime_green"
                                    app:ringWidth="8dp"
                                    app:startAngle="-90" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Vitamin D"
                                    android:textAlignment="center"
                                    android:textColor="@color/teal_700"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:orientation="vertical">

                                <com.example.fyp_fitledger.CircularPercentageRingView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/pctRingVitaminA"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:percentage="75"
                                    app:ringBackgroundColor="@android:color/darker_gray"
                                    app:ringColor="@color/grayish_lime_green"
                                    app:ringWidth="8dp"
                                    app:startAngle="-90" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Vitamin A"
                                    android:textAlignment="center"
                                    android:textColor="@color/teal_700"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:orientation="vertical">

                                <com.example.fyp_fitledger.CircularPercentageRingView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/pctRingVitaminB12"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:percentage="75"
                                    app:ringBackgroundColor="@android:color/darker_gray"
                                    app:ringColor="@color/grayish_lime_green"
                                    app:ringWidth="8dp"
                                    app:startAngle="-90" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Vitamin B12"
                                    android:textAlignment="center"
                                    android:textColor="@color/teal_700"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:orientation="vertical">

                                <com.example.fyp_fitledger.CircularPercentageRingView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/pctRingVitaminC"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:percentage="75"
                                    app:ringBackgroundColor="@android:color/darker_gray"
                                    app:ringColor="@color/grayish_lime_green"
                                    app:ringWidth="8dp"
                                    app:startAngle="-90" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Vitamin C"
                                    android:textAlignment="center"
                                    android:textColor="@color/teal_700"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.example.fyp_fitledger.CircularPercentageRingView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/pctRingVitaminK"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:percentage="75"
                                    app:ringBackgroundColor="@android:color/darker_gray"
                                    app:ringColor="@color/grayish_lime_green"
                                    app:ringWidth="8dp"
                                    app:startAngle="-90" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Vitamin K"
                                    android:textAlignment="center"
                                    android:textColor="@color/teal_700"
                                    android:textSize="11sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnAddDiet"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/des_cyan"
        android:shadowColor="@color/black"
        android:text="+"
        android:backgroundTintMode="add"
        android:textSize="20sp"
        app2:layout_constraintBottom_toBottomOf="parent"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toTopOf="parent"
        app2:layout_constraintHorizontal_bias="0.85"
        app2:layout_constraintVertical_bias="0.87"/>
</androidx.constraintlayout.widget.ConstraintLayout>
