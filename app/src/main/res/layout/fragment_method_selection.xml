<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@color/light_grayish_blue">

    <TextView
        android:id="@+id/tvChooseMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a method for accurate body fat calculation"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingBottom="35dp"
        android:textColor="@color/teal_700"
        android:shadowRadius="2"
        android:shadowColor="@color/gray" />

    <Button
        android:id="@+id/btnTapeMeasure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tape Measure Method"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btnFatCaliper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fat Caliper Method"
        android:padding="10dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>
