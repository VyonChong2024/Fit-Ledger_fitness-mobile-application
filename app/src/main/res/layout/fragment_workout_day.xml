<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@color/light_grayish_blue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Prefer Workout Days"
        android:textSize="35sp"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:shadowRadius="2"
        android:shadowColor="@color/gray"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_day_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_week_day_1"
            app2:tint="@color/light_grey"/>

        <ImageView
            android:id="@+id/icon_day_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_week_day_2"
            app2:tint="@color/light_grey" />
        <ImageView
            android:id="@+id/icon_day_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_week_day_3"
            app2:tint="@color/light_grey" />

        <ImageView
            android:id="@+id/icon_day_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_week_day_4"
            app2:tint="@color/light_grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_day_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_week_day_5"
            app2:tint="@color/light_grey" />

        <ImageView
            android:id="@+id/icon_day_6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_week_day_6"
            app2:tint="@color/light_grey" />

        <ImageView
            android:id="@+id/icon_day_7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_week_day_7"
            app2:tint="@color/light_grey" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="24dp"
        android:enabled="false"/>
</LinearLayout>