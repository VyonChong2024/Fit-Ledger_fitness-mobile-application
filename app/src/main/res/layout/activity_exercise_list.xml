<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/des_cyan" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:drawableTint="@color/gray"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:drawableLeft="@drawable/icon_search_resize"
            android:background="@drawable/search_box_background"/>

        <ImageButton
            android:id="@+id/filterButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/icon_filter"
            android:backgroundTint="@color/white"
            app2:tint="@color/gray"/>

    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="5dp"
        android:fadingEdge="horizontal"
        android:requiresFadingEdge="horizontal"
        android:fadingEdgeLength="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/filterOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFilter1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chest"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="3dp"
                android:background="@drawable/round_corner_background"
                android:backgroundTint="@color/light_grey"/>

            <TextView
                android:id="@+id/tvFilter2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoulder"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="3dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/round_corner_background"
                android:backgroundTint="@color/light_grey"/>

            <TextView
                android:id="@+id/tvFilter3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="3dp"
                android:background="@drawable/round_corner_background"
                android:backgroundTint="@color/light_grey"/>

            <TextView
                android:id="@+id/tvFilter4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arm"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="3dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/round_corner_background"
                android:backgroundTint="@color/light_grey"/>

            <TextView
                android:id="@+id/tvFilter5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leg"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="3dp"
                android:background="@drawable/round_corner_background"
                android:backgroundTint="@color/light_grey"/>

        </LinearLayout>
    </HorizontalScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/exerciseContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="Workout 1"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>